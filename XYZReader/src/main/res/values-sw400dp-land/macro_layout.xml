<resources>
    <!--control the starting height of the collapsable toolbar-->
    <dimen name="app_bar_height">108dp</dimen>
    <dimen name="keyline_1">24dp</dimen>
    <dimen name="keyline_2">104dp</dimen>
    <dimen name="fab_margin">24dp</dimen>

    <!--main activity contains summary list of articles-->
    <!-- list -->
    <string name="list_title_debug">values sw400dp land</string>
    <dimen name="list_title_text_size">16sp</dimen>
    <dimen name="list_byline_text_size">12sp</dimen>
    <dimen name="list_side_margin">@dimen/keyline_1</dimen>
    <dimen name="list_container_side_margin">4dp</dimen>
    <dimen name="list_toolbar_side_margin">0dp</dimen>
    <dimen name="list_photo_width">100dp</dimen>

    <!--number of columns to display in the list of articles-->
    <integer name="list_column_count">2</integer>
    <!--
        0 = small height (almost full width) rectangle, photo on left with title and author on right
        1 = large height (almost square0 rectangle, photo on top with title and author below
    -->
    <integer name="list_item_size">1</integer>

    <!-- detail -->
    <dimen name="detail_title_text_size">24sp</dimen>
    <dimen name="detail_byline_text_size">16sp</dimen>
    <dimen name="detail_body_text_size">18sp</dimen>
    <item name="detail_body_line_spacing_multiplier" format="float" type="fraction">1.1</item>

    <bool name="detail_is_card">false</bool>

    <!--0 = FIT_CENTER, 1 = CENTER_CROP-->
    <integer name="detail_photo_scale_type">1</integer>

    <!--limit the size of the detail picture so it doesn't take up the entire screen-->
    <dimen name="detail_photo_max_height">240dp</dimen>

    <dimen name="detail_article_horiz_margin">12dp</dimen>
    <dimen name="detail_inner_horiz_margin">@dimen/keyline_1</dimen>

    <dimen name="detail_metabar_vert_padding">16dp</dimen>
    <dimen name="detail_metabar_title_bottom_padding">4dp</dimen>

    <dimen name="detail_card_top_margin">12dp</dimen>
    <dimen name="detail_card_side_margin">112dp</dimen>

</resources>