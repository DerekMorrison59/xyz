<resources>
    <!--control the starting height of the collapsable toolbar-->
    <dimen name="app_bar_height">144dp</dimen>

    <dimen name="title_text_size">24sp</dimen>
    <dimen name="subheading_text_size">20sp</dimen>
    <dimen name="caption_text_size">16sp</dimen>
    <dimen name="body1_text_size">18sp</dimen>

    <!-- list -->
    <string name="list_title_debug">values sw600dp</string>
    <dimen name="list_title_text_size">28sp</dimen>
    <dimen name="list_byline_text_size">22sp</dimen>
    <dimen name="list_side_margin">8dp</dimen>
    <dimen name="list_toolbar_side_margin">0dp</dimen>
    <dimen name="list_photo_width">100dp</dimen>

    <!--main activity contains summary list of articles-->
    <!--number of columns to display in the list of articles-->
    <integer name="list_column_count">3</integer>
    <!--
        0 = small height (almost full width) rectangle, photo on left with title and author on right
        1 = large height (almost square rectangle, photo on top with title and author below
    -->
    <integer name="list_item_size">1</integer>

    <!-- detail -->
    <dimen name="detail_title_text_size">36sp</dimen>
    <dimen name="detail_byline_text_size">22sp</dimen>
    <dimen name="detail_body_text_size">24sp</dimen>
    <item name="detail_body_line_spacing_multiplier" format="float" type="fraction">1.1</item>

    <bool name="detail_is_card">false</bool>

    <!--0 = FIT_CENTER, 1 = CENTER_CROP-->
    <integer name="detail_photo_scale_type">1</integer>

    <!--limit the size of the detail picture so it doesn't take up the entire screen-->
    <dimen name="detail_photo_max_height">480dp</dimen>

    <dimen name="detail_article_horiz_margin">8dp</dimen>
    <dimen name="detail_inner_horiz_margin">@dimen/keyline_1</dimen>

    <dimen name="detail_metabar_vert_padding">16dp</dimen>
    <dimen name="detail_metabar_title_bottom_padding">4dp</dimen>

    <dimen name="detail_card_top_margin">16dp</dimen>
    <dimen name="detail_card_side_margin">256dp</dimen>
    <dimen name="detail_body_bottom_margin">16dp</dimen>

</resources>
